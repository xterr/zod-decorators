root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{*.ts,*.tsx}]
ij_continuation_indent_size = 2
ij_typescript_continuation_indent_size = 2
ij_typescript_enforce_trailing_comma = whenmultiline
ij_typescript_tab_width = 2
ij_typescript_indent_size = 2
ij_typescript_spaces_within_imports = true
ij_typescript_blank_lines_after_imports = 1
ij_typescript_keep_blank_lines_in_code = 1
ij_typescript_import_sort_module_name = true
ij_typescript_import_sort_members = true
ij_typescript_spaces_within_object_literal_braces = true
ij_typescript_spaces_within_brackets = true
ij_typescript_indent_chained_calls = true
ij_typescript_chained_call_dot_on_new_line = true
ij_typescript_method_call_chain_wrap = off
ij_typescript_use_chained_calls_group_indents = false
ij_typescript_force_semicolon_style = true

[*.{js,json,yml}]
indent_style = space
indent_size = 2
ij_javascript_continuation_indent_size = 2
ij_javascript_force_semicolon_style = true
